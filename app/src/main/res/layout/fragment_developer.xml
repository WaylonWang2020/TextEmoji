<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    >
    <include layout="@layout/head_bar" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:cardElevation="1px"
        >
        <RelativeLayout
            android:id="@+id/profile_container"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            >
            <ImageView
                android:id="@+id/profile_avatar"
                android:layout_width="@dimen/developer_avatar_width"
                android:layout_height="@dimen/developer_avatar_height"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"

                android:src="@drawable/avatar"
                />
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/profile_avatar"
                android:layout_marginStart="16dp"

                android:text="@string/developer_name"
                android:textSize="18sp"
                android:textColor="#414141"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:cardElevation="1px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/weibo_container"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                >
                <ImageView
                    android:id="@+id/weibo_logo"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/logo_height"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitCenter"

                    android:src="@drawable/weibo"
                    />
                <TextView
                    android:id="@+id/weibo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/weibo_logo"
                    android:layout_marginStart="16dp"

                    android:text="@string/weibo_name"
                    android:textSize="18sp"
                    android:textColor="#414141"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#99000000" />
            <RelativeLayout
                android:id="@+id/github_container"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                >
                <ImageView
                    android:id="@+id/github_logo"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/logo_height"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitCenter"

                    android:src="@drawable/github_octocat"
                    />
                <TextView
                    android:id="@+id/github_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/github_logo"
                    android:layout_marginStart="16dp"

                    android:text="@string/github_name"
                    android:textSize="18sp"
                    android:textColor="#414141"
                    />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:cardElevation="1px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/open_source_container"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                >
                <ImageView
                    android:id="@+id/open_source_logo"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="@dimen/logo_height"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitCenter"

                    android:src="@drawable/github_mark"
                    />
                <TextView
                    android:id="@+id/open_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/open_source_logo"
                    android:layout_marginStart="16dp"

                    android:text="@string/open_source"
                    android:textSize="16sp"
                    android:textColor="#414141"
                    />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>